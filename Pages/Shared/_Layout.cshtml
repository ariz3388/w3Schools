<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Jay Conrad</title>

    <!-- jQuery & Bootstrap 5.3 -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap Theme and Custom Styling -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <link rel="icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true" />

    <!-- common js libraries -->
    <script src="~/js/common.js"></script>
</head>
<body>
    <div class="container">
        <header role="heading">
            <div class="container">
                <div class="row">
                    <div class="mt-4 p-5 bg-warning text-white rounded">
                        <h1>Jay Conrad</h1>
                        <h3>Experienced Full Stack .Net Developer</h3>
                        <p><i>Let my experience work for you!</i></p>                        
                    </div>                    
                </div>
                <div class="row" style="margin-top:-15px;">
                    <nav class="navbar navbar-expand-sm bg-warning navbar-dark rounded">
                        <div class="container-fluid">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a id="homeLink" class="nav-link" asp-page="Index">Home</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a id="expLink" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" href="#">Experience</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-page="Companies">Companies</a></li>
                                        <li><a class="dropdown-item" asp-page="Projects">Projects</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a id="techLink" class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" href="#">Technology</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="#">Client-Side</a></li>
                                        <li><a class="dropdown-item" href="#">Server-Side</a></li>
                                        <li><a class="dropdown-item" href="#">Database</a></li>
                                        <li><a class="dropdown-item" href="#">Source Control</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>
        <main role="main">
      @RenderBody()
        </main>
    </div>

  <script src="~/js/site.js" asp-append-version="true"></script>

  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>